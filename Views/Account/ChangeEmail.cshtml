@using Instadvert.CZ.Data.ViewModels;
@model UserVM





<section class="">
    <div class="container">
        <div class="col-md-5 mx-auto text-center">
            <div class="h-100 p-5 my-5 bg-body-white ">
                <h2>Change your email here</h2>
            </div>
        </div>
    </div>
</section>



<section class="bg-custom-gray  my-5">
    <div class="container">
        <div class="col-md-9 mx-auto">
            <form asp-action="ChangeEmail">

                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                @if (Model.SelectedRole == "Blogger")
                {
                    <div id="bloggerForm" class="container mt-4">
                        <!-- Email Field -->
                        <p class="mb-4 ">
                            
                            <div class="input-group mb-3">
                                <span class="input-group-text bg-clssc">
                                    <label class="text-white" asp-for="Email" class="control-label"></label>
                                </span>
                                <input id="Email" asp-for="Email" class="form-control" />
                                <span asp-validation-for="Email" class="text-danger"></span>
                            </div>
                        </p>
                    </div>
                }

                @if (Model.SelectedRole == "Company")
                {
                    <div id="companyForm" class="container mt-4">
                        <!-- Email Field -->
                        <p class="mb-4 ">
                            
                            <div class="input-group mb-3">
                                <span class="input-group-text bg-clssc">
                                    <label class="text-white" asp-for="Email" class="control-label"></label>
                                </span>
                                <input id="Email" asp-for="Email" class="form-control" />
                                <span asp-validation-for="Email" class="text-danger"></span>
                            </div>
                        </p>
                    </div>
                }





                <div class="form-group text-center">    
                    <input type="submit" value="Change email" class="btn-chat px-3 py-2 my-5 btn-15-width" />
                </div>
            </form>


        </div>
    </div>


</section>

